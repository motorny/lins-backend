{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "login": {
      "title": "Login",
      "type": "string",
      "description": "User's Login",
      "example": "lins@ceo.com",
      "minLength": 1
    },
    "password": {
      "title": "Password",
      "type": "string",
      "description": "User's password",
      "example": "qwerty",
      "minLength": 1
    }
  },
  "required": ["login", "password"]
}