{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "comment": {
      "title": "Commentary",
      "type": "string",
      "description": "Commentary body",
      "example": "Worked well with my PC"
    },
    "image_url": {
      "title": "Item's image for comment",
      "description": "base64 encoded image",
      "type": "string"
    },
    "title": {
      "title": "Title",
      "type": "string",
      "description": "Title of the comment",
      "example": "Recommend!!!"
    },
    "user_id": {
      "title": "User id",
      "type": "integer",
      "description": "Id of the user who leaves comment"
    },
    "item_id" : {
      "title": "Item id",
      "type": "integer",
      "description": "Id of the item to which the comment is referred"
    }
  },
  "required": ["comment", "title", "user_id", "item_id"]
}